<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/kanyon.jpeg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <!-- <h2 class="subheading">Problems look mighty small from 150 miles up</h2> -->
            <span class="meta">Posted by
              <a href="#">aselcuktuncer</a>
              on <%= post.dateCreated.toDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div><%= post.detail %></div>
          
        </div>
      </div>
    </div>
  </article>
  <div class="container">
    <div class="row justify-content-md-center">
      <a href="/posts/edit/<%= post._id %>" type="button" class="btn btn-primary">Edit Post</a>
      <div class="col-2"></div>
      <a href="/posts/<%= post._id %>?_method=DELETE" type="button" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete Post</a>
    </div>
  </div>
  

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
